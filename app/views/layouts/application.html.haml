!!!
%html
  %head
    %title Piece
    = stylesheet_link_tag    "application", media: "all", 'data-turbolinks-track' => true
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      - if login?
        = link_to 'ログアウト', logout_path
        %img(src="#{current_user.image_url}")
        = link_to '新規作成', new_post_path
      - else
        = link_to 'Twitterでログイン', '/auth/twitter'

      - if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      - if flash[:alert]
        .alert.alert-danger
          = flash[:alert]

      = yield
